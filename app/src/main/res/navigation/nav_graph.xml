<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/productListFragment">

    <fragment
        android:id="@+id/transactionsListFragment"
        android:name="com.macdonald.angel.gnb.ui.features.transactionList.TransactionsListFragment"
        android:label="@string/transaction_list_fragment_name"
        tools:layout="@layout/fragment_transactions_list">

        <action
            android:id="@+id/go_conversion_rate_info_action"
            app:destination="@id/rateListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/go_product_detail_action"
            app:destination="@id/productDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>
    <fragment
        android:id="@+id/rateListFragment"
        android:name="com.macdonald.angel.gnb.ui.features.rateList.RateListFragment"
        android:label="@string/rate_list_fragment_name"
        tools:layout="@layout/fragment_rate_list" />
    <fragment
        android:id="@+id/productListFragment"
        android:name="com.macdonald.angel.gnb.ui.features.productList.ProductListFragment"
        android:label="@string/product_list_fragment_name"
        tools:layout="@layout/fragment_product_list">

        <action
            android:id="@+id/go_product_detail_action"
            app:destination="@id/productDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.macdonald.angel.gnb.ui.features.productDetails.ProductDetailsFragment"
        android:label="@string/product_details_fragment_name"
        tools:layout="@layout/fragment_product_details" >

        <argument
            android:name="productName"
            app:argType="string"/>

    </fragment>
</navigation>